<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">My Plants</h1>
  </div>
</div>



{{#if plants.length}}
  <div class="col-md-6">
    <h3>Your plants:</h3>

    {{#each plants as |plant|}}
      <div class="mx-auto" style="width: 400px;">
        <div class="card" style="width: 25rem;">
          <div class="card-body">
            <h5 class="card-title">{{plant.name}}</h5>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}